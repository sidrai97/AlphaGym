    body(style="background: #a0a0a0;")       
        div(class="container-fluid", style="background:#303030;")
            br
            img(id="profilePicture", class="img img-responsive img-circle col-lg-2 col-md-3 col-sm-4 col-xs-4 col-lg-offset-5 col-md-offset-6 col-sm-offset-4 col-xs-offset-4")
            br
            h3(id="username" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center" style="color:#FFD700;") 
        
        div(class="container-fluid", style="background:#000000; padding:5px;")
        div(class="container", style="background: #a0a0a0;")
            table(id="statsTable", class="col-lg-10 col-md-10 col-sm-10 col-xs-10 table " style="")
                thead
                    tr
                        th(class="text-center") Date
                        th(class="text-center") Exercise
                        //-th Weighted
                        th(class="text-center") Weight(in lbs)
                        th(class="text-center") Sets
                        th(class="text-center") Reps
                tbody
                    each val in message
                        tr
                            td= val.date
                            td= val.exerciseName
                            //-td= val.weighted
                            td= val.weight
                            td= val.sets
                            td= val.reps
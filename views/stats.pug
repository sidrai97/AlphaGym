        script(type='text/javascript').
            console.log('scripting ... [userid to username]')
            console.log("https://graph.facebook.com/v2.6/"+$_GET('userid'))
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function() {
                if (this.readyState == 4 && this.status == 200) {
                    console.log(xhttp.responseText);
                }
            };
            xhttp.open("GET", "https://graph.facebook.com/v2.6/"+$_GET('userid'), true);
            xhttp.send();
    body        
        div(class="container")
            h3= "User Id: "+userid
            table(id="statsTable", class="table table-hover")
                thead
                    tr
                        th Date
                        th Exercise Name
                        th Weighted
                        th Weight(in lbs)
                        th Sets
                        th Reps
                tbody
                    each val in message
                        tr
                            td= val.date
                            td= val.exerciseName
                            td= val.weighted
                            td= val.weight
                            td= val.sets
                            td= val.reps
